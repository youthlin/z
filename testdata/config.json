{
    "logs": {
        "level": {
            "Root": "Warn",
            "Loggers": {
                "github": "Info",
                "github.com/youthlin": "Debug"
            }
        },
        "zap": [
            {
                "name": "console",
                "enable": true,
                "json": false,
                "level": "debug",
                "output": {
                    "type": "console",
                    "destination": {
                        "filename": "stdout"
                    }
                },
                "encoderConfig": {
                    "levelEncoder": "capitalColor",
                    "timeEncoder": "rfc3339nano",
                    "durationEncoder": "string"
                }
            },
            {
                "name": "file",
                "enable": true,
                "json": false,
                "level": "debug",
                "output": {
                    "type": "file",
                    "destination": {
                        "filename": "app.log"
                    }
                },
                "encoderConfig": {
                    "timeKey": "time",
                    "levelEncoder": "capital",
                    "timeEncoder": "rfc3339nano",
                    "durationEncoder": "nanos"
                }
            },
            {
                "name": "err-fail",
                "enable": true,
                "json": false,
                "level": "error",
                "output": {
                    "type": "file",
                    "destination": {
                        "filename": "app.error.log"
                    }
                },
                "encoderConfig": {
                    "timeKey": "time",
                    "levelEncoder": "capital",
                    "timeEncoder": "rfc3339nano",
                    "durationEncoder": "nanos"
                }
            }
        ]
    }
}